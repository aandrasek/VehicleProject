@model IEnumerable<VehicleMonoProject.MVC.ViewModels.ModelViewModel>

@{
    ViewBag.Title = "VehicleModelList";
}
<link rel="stylesheet" type="text/css" href="~/Main.css">

<h3>VehicleModel List</h3>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("VehicleModelList", "VehicleModel"))
{
    <label>Search(by sort):</label>
    <input type="text" name="search" value="@ViewBag.search">

    <label>Sort:</label>
    <select name="sort">
        <option value="MakeID" @(ViewBag.sort == "MakeID" ? "selected" : "")>MakeID</option>
        <option value="Name" @(ViewBag.sort == "Name" ? "selected" : "")>Name</option>
        <option value="Abrv" @(ViewBag.sort == "Abrv" ? "selected" : "")>Abrv</option>
    </select>

    <label>Direction:</label>
    <select name="direction">
        <option value="Ascending" @(ViewBag.direction == "Ascending" ? "selected" : "")>Ascending</option>
        <option value="Descending" @(ViewBag.direction == "Descending" ? "selected" : "")>Descending</option>
    </select>
    <input type="submit" class="button" value="Search" />
}
<br />

<table class="table">
    <tr>
        <th>
            MakeID
        </th>
        <th>
            Name
        </th>
        <th>
            Abrv
        </th>
        <th></th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MakeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abrv)
            </td>
            <td>
                @Html.ActionLink("Edit", "Update", "VehicleModel", new { ID = item.ID }, null) |
                @Html.ActionLink("Delete", "Delete", "VehicleModel", new { ID = item.ID }, null)
            </td>
        </tr>
    }

</table>
<div class="align">
    @for (int page = 1; page <= ViewBag.pageCount; page++)
    {
        if (page == ViewBag.page)
        {
            @Html.ActionLink(page.ToString(), "VehicleModelList", "VehicleModel", new { search = ViewBag.search, page = page, sort = ViewBag.sort, direction = ViewBag.direction }, new { @class = "pagenumber currentpage" })
        }
        else
        {
            @Html.ActionLink(page.ToString(), "VehicleModelList", "VehicleModel", new { search = ViewBag.search, page = page, sort = ViewBag.sort, direction = ViewBag.direction }, new { @class = "pagenumber" })

        }

    }
</div>

